# Use the official Python image
FROM python:3.9-slim

# Set the working directory
WORKDIR /app

# Copy the requirements file from its location relative to the project root
COPY services/event-listener/requirements.txt .

# Install the dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create the directory structure for the application
RUN mkdir -p agents/core/event-listener

# Copy the application code from its location relative to the project root into the correct package structure
COPY services/event-listener/ ./agents/core/event-listener/

# Copy the shared directory from its location relative to the project root
COPY shared/ ./shared

# Set environment variable for port
ENV PORT=8080

# Set PYTHONPATH to include the project root
ENV PYTHONPATH=/app

# Expose the port
EXPOSE 8080

# Run the application
CMD uvicorn agents.core.event-listener.main:app --host 0.0.0.0 --port $PORT
