# Use the official Python image
FROM python:3.9-slim

# Set the working directory
WORKDIR /app

# Copy the requirements file from its location relative to the project root
COPY services/booking-api/requirements.txt .

# Install the dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create the directory structure for the application
RUN mkdir -p agents/core/booking-api

# Copy the application code from its location relative to the project root into the correct package structure
COPY services/booking-api/ ./agents/core/booking-api/

# Create __init__.py files to make them Python packages
RUN touch agents/__init__.py
RUN touch agents/core/__init__.py
RUN touch agents/core/booking-api/__init__.py

# Copy the shared directory from its location relative to the project root
COPY shared/ ./shared

# Set PYTHONPATH to include the project root
ENV PYTHONPATH=/app

# Expose the port
EXPOSE 8080

# Run the application
CMD uvicorn agents.core.booking-api.main:app --host 0.0.0.0 --port 8080
